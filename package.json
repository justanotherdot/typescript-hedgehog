{
  "name": "typescript-hedgehog-workspace",
  "version": "0.1.2",
  "private": true,
  "description": "Workspace root for typescript-hedgehog packages",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=@justanotherdot/hedgehog",
    "build:wasm": "npm run build --workspace=@justanotherdot/hedgehog-splitmix-wasm",
    "build:all": "npm run build:wasm && npm run build",
    "test": "npm run test --workspace=@justanotherdot/hedgehog",
    "test:watch": "npm run test:watch --workspace=@justanotherdot/hedgehog",
    "lint": "npm run lint --workspace=@justanotherdot/hedgehog",
    "lint:fix": "npm run lint:fix --workspace=@justanotherdot/hedgehog",
    "typecheck": "npm run typecheck --workspace=@justanotherdot/hedgehog",
    "bench": "npm run bench --workspace=@justanotherdot/hedgehog",
    "release": "bin/release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/justanotherdot/typescript-hedgehog.git"
  },
  "homepage": "https://github.com/justanotherdot/typescript-hedgehog#readme",
  "bugs": {
    "url": "https://github.com/justanotherdot/typescript-hedgehog/issues"
  },
  "author": "Ryan James Spencer <spencer.ryanjames@gmail.com>",
  "license": "BSD-3-Clause",
  "engines": {
    "node": ">=20.16.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-plugin-import": "^2.29.0",
    "prettier": "^3.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.0.0",
    "zod": "^3.23.8"
  }
}
